<?xml version="1.0" encoding="utf-8"?>
<project>
    <modelVersion>4.0.0</modelVersion>
    <groupId>org.hihan</groupId>
    <artifactId>girinoscope</artifactId>
    <version>1.2.1-SNAPSHOT</version>
    
    <name>Girinoscope</name>
    <description>A simple graphical user interface for Girino, a Fast Arduino Oscilloscope running on Linux, Mac OSÂ X and Windows.</description>
    <url>https://github.com/Chatanga/Girinoscope</url>
    <inceptionYear>2014</inceptionYear>
    <developers>
        <developer>
            <id>Chatanga</id>
            <name>Florent Lioult</name>
            <url>https://github.com/chatanga</url>
        </developer>
    </developers>
    <contributors>
        <contributor>
            <name>reallinfo</name>
            <url>https://github.com/reallinfo</url>
        </contributor>
    </contributors>  
    
